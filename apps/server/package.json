{
  "name": "@opsbot/server",
  "version": "0.1.0",
  "description": "Server for opsbot - Bun + Elysia",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@opsbot/contracts": "workspace:*",
    "@opsbot/safety": "workspace:*",
    "elysia": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
