{
  "$schema": "../schemas/opsbot-config.schema.json",
  "version": 1,
  "safety": {
    "mode": "plan-mode",
    "planTimeoutSec": 300,
    "alwaysRequireApproval": ["delete", "destroy", "terminate", "drop", "rm -rf"],
    "forwardApprovals": {
      "enabled": false
    },
    "autoApproveLowImpact": false
  },
  "skills": {
    "allowBundled": ["docker", "kubernetes", "terraform", "github"],
    "entries": {
      "kubernetes": {
        "enabled": true,
        "config": {
          "productionContexts": ["prod", "production"],
          "requireApprovalForProduction": true
        }
      }
    }
  },
  "channels": {
    "tui": { "enabled": true },
    "telegram": { "enabled": true },
    "slack": { "enabled": true },
    "teams": { "enabled": false }
  },
  "exec": {
    "security": "allowlist",
    "onMiss": "ask",
    "safeBins": ["jq", "yq", "grep", "awk", "sed", "curl", "cat", "head", "tail", "wc", "sort", "uniq"]
  }
}
